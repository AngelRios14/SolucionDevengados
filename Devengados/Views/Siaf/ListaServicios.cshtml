<br />
<div class="container row">
    <div id="divListaOrdenesServicio">
        <div class="col-6">
            <h2 class="text-info">Lista Servicios</h2>
        </div>
        <div class="col-3 offset-3" style="display:none;">
            <a asp-action="Upsert" asp-controller="Books" class="btn btn-info form-control text-white">
                Agregar Servicio
            </a>
        </div>
        <div class="col-12 border p-3">
            <table id="dtServicios" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Contrato<br />Primigenio</th>
                        <th>Monto<br />Contractual</th>
                        <th>Monto<br />Ejecutado</th>
                        <th>Area<br /> Usuaria</th>
                        <th>N°<br />Orden</th>
                        @*<th>Fecha<br />Orden</th>*@
                        @*<th>Certificado</th>*@
                        <th>Expediente</th>
                        @*<th>Ruc</th>*@
                        <th>Proveedor</th>
                        <th>Importe</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>    

    @*MODAL ORDEN*@
    <div id="divOrdenServicio" class="container"  >
        <div class="col-12 border p-3"  >
            <div class="panel panel-default" style="margin-bottom: 10px;">
                <div class="panel-heading">
                    <span> Ejecucion Contractual - Reporte de Control de Saldo</span>
                </div>
                <div class="panel-body">
                    <div class="form-horizontals">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtContratoOrdenS">Contrato / Nro ORDEN:</label>
                                <input id="txtContratoOrdenS" name="txtContratoOrdenS" type="text" class="form-control" maxlength="40">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtNroProcedimientoS"> N° de Procedimiento:</label>
                                <input id="txtNroProcedimientoS" name="txtNroProcedimientoS" type="text" class="form-control" maxlength="40">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label" for="txtDescripcionS"> Descripcion:</label>
                                <input id="txtDescripcionS" name="txtDescripcionS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label" for="txtProveedorS"> Proveedor:</label>
                                <input id="txtProveedorS" name="txtProveedorS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtFecNotiContratoS">Fecha de Notificacion / Firma de Contrato:</label>
                                <input id="txtFecNotiContratoS" name="txtFecNotiContratoS" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtPlazoS"> Plazo (en dias):</label>
                                <input id="txtPlazoS" name="txtPlazoS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtMontoContraVigS">Monto Contractual Vigente (S/) :</label>
                                <input id="txtMontoContraVigS" name="txtMontoContraVigS" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtMontoAdjS"> Monto Adjudicado (S/):</label>
                                <input id="txtMontoAdjS" name="txtMontoAdjS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtPrestaAdicionalS">(+) Prestaciones adicionales (S/) :</label>
                                <input id="txtPrestaAdicionalS" name="txtPrestaAdicionalS" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtReduccionS"> (-) Reducciones (S/):</label>
                                <input id="txtReduccionS" name="txtReduccionS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtFechaInicioS">Inicio de plazo :</label>
                                <input id="txtFechaInicioS" name="txtFechaInicioS" type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" for="txtFinPlazoS"> Finalización de Plazo:</label>
                                <input id="txtFinPlazoS" name="txtFinPlazoS" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12" >

                                <div class="panel-heading-2">
                                    <span>2021</span>
                                </div>
                                <div class="panel-body-2">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtNroOrdenS">Orden N°:</label>
                                            <input id="txtNroOrdenS" name="txtNroOrdenS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtExpSiafS"> Exp. SIAF:</label>
                                            <input id="txtExpSiafS" name="txtExpSiafS" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtCertificadoS">Certificado N°:</label>
                                            <input id="txtCertificadoS" name="txtCertificadoS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtCantEntregableS"> Cantidad de Entregables:</label>
                                            <input id="txtCantEntregableS" name="txtCantEntregableS" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtMontoCompromSiafS">Monto Comprometido SIAF(S/):</label>
                                            <input id="txtMontoCompromSiafS" name="txtMontoCompromSiafS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtAmpRebSiafS"> Amp/Rebaja SIAF(S/):</label>
                                            <input id="txtAmpRebSiafS" name="txtAmpRebSiafS" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtMontoDevengadoSiafS">Monto Devengado SIAF(S/):</label>
                                            <input id="txtMontoDevengadoSiafS" name="txtMontoDevengadoSiafS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label" for="txtSaldoSiafS"> Saldo SIAF(S/):</label>
                                            <input id="txtSaldoSiafS" name="txtSaldoSiafS" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-12 text-center">
                                            <button id="btnGenerarEntregable" type="button" class="btn btn-gris">
                                                <span class="glyphicon glyphicon-export"></span>  Generar Entregables</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-body-2" style="overflow:auto;">
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <table id="dtgEntregables" class="cuerpo" cellspacing="0" border="1" rules="all" style="height:100%;width:100%;border-collapse:collapse;">
                                                <thead>
                                                    <tr class="cabecera" align="center">
                                                        <th align="center" style="width: 3%"></th>
                                                        <th align="center" style="width: 3%"></th>
                                                        <th align="center" style="width: 3%">Nº</th>
                                                        <th align="center" style="width: 4%">Plazo</th>
                                                        <th align="center" style="width: 10%">Fecha<br>Vencimiento</th>
                                                        <th align="center" style="width: 4%">%</th>
                                                        <th align="center" style="width: 10%">Programado(S/)</th>
                                                        <th align="center" style="width: 10%">Doc<br>Tramite</th>
                                                        <th align="center" style="width: 10%">Fecha<br>EntregaTram</th>
                                                        <th align="center" style="width: 5%">N°Factura</th>
                                                        <th align="center" style="width: 10%">Monto<br>Devengado(S/)</th>
                                                        <th align="center" style="width: 10%">Penalidad<br>Mora(S/)</th>
                                                        <th align="center" style="width: 10%">Otras<br>Penalidades(S/)</th>
                                                        <th align="center" style="width: 10%">Monto a <br>Pagar(S/)</th>
                                                        <th align="center" style="width: 10%">Obs.</th>
                                                        <th align="center" style="width: 10%">Fecha<br>Devengado</th>
                                                        <th align="center" style="width: 10%">Fecha<br>Pago</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="dtgDatosEntregables">
                                                    <tr>
                                                        <td colspan="10" valign="middle" align="center">
                                                            @*<img id="imgcargando" src="../Images/ajax_loader1.gif" width="110" height="100" alt="cargando" />*@
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>


                                        </div>
                                    </div>

                                </div>
                                <div class="panel-body-2">
                                    <div class="form-row">
                                        <div class="form-group col-md-3">
                                            <label class="control-label" for="txtMontoContractualS"> Monto Contractual(S/):</label>
                                            <input id="txtMontoContractualS" name="txtMontoContractualS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label class="control-label" for="txtTotalDevengadoS"> Total Devengado(S/):</label>
                                            <input id="txtTotalDevengadoS" name="txtTotalDevengadoS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label class="control-label" for="txtPenalidadMoraS"> Penalidad Mora(S/):</label>
                                            <input id="txtPenalidadMoraS" name="txtPenalidadMoraS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label class="control-label" for="txtOtrasPenalidadesS"> Otras Penalidades(S/):</label>
                                            <input id="txtOtrasPenalidadesS" name="txtOtrasPenalidadesS" type="text" class="form-control">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label class="control-label" for="txtSaldoPendienteS"> Saldo Pendiente(S/):</label>
                                            <input id="txtSaldoPendienteS" name="txtSaldoPendienteS" type="text" class="form-control">
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

</div>


</div>
